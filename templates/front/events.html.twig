{% extends 'base-front.html.twig' %}

{% block content%}
        <div class="container">

            <div class="blog-page">
                <div class="row">
                    <a href="{{ path('addres') }}" class="button gray"><i class=" fa fa-ticket" aria-hidden="true"></i> Passez une r√©servation</a>

                        {% for c in events %}

                        <div class="utf_blog_post">
                            <a href="blog_detail_right_sidebar.html" class="utf_post_img"> <img src="{{ asset('/uploads/images/'~ c.image) }}" alt=""> </a>
                            <div class="utf_post_content">
                                <h3><a href="blog_detail_right_sidebar.html">{{ c.nomevent }}</a></h3>
                                <ul class="utf_post_text_meta">
                                        <span> <i class="fa fa-calendar" aria-hidden="true"></i>{{'From' ~' '~ c.datedebev|date }}</span>
                                        <span>  <i class="fa fa-calendar" aria-hidden="true"></i>{{'To' ~' '~ c.datefinev|date }}</span>
                                        <div class="utf_star_rating_section">
                                            <div class="utf_counter_star_rating">{{ c.nbparticip ~' '~'participants' }}</div>
                                        </div>


                                    <span><i class="fa fa-map-marker"></i> {{ c.lieu}}</span>
                                    <span>  <p> <i class="fa fa-question-circle "></i>{{ 'Description'~' :' ~c.description }}</p></span>


                                </ul>
                            </div>
                        {% endfor %}
                    </div>


                    <div class="clearfix"></div>
                    <div class="col-md-12">
                        <div class="utf_pagination_container_part margin-bottom-70">
                            <nav class="pagination">
                                <ul>
                                    <li><a class="current-page" {{ knp_pagination_render(events) }}></a></li>
                                </ul>

                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}