    <!-- Scripts -->
    <script>
        function  plus(){
            const c= document.getElementById("txt");
            const a= document.getElementById("txt").value;
            let b=parseInt(a);
            c.value=b+1;


        }
        function  moins(){

            const c= document.getElementById("txt");
            const a= document.getElementById("txt").value;

            let b=parseInt(a);
            if(a>0)
                c.value=b-1;


        }
