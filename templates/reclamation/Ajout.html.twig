{% extends 'base-front.html.twig' %}

{% block title %}Nouvelle Réclamation{% endblock %}

{% block body %}
    <style>li{
            color:red;
        }</style>
    <div class="container">

    <div class="blog-page">
    <div class="row">
        <div class="col-lg-8 col-md-8">
        {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>
            <div class="add_utf_listing_section margin-top-45">
                <div class="utf_add_listing_part_headline_part">
                    <h3><i class="sl sl-icon-list"></i> Ajouter votre réclamation</h3>
                </div>
                <div class="row with-forms">
                    <div class="col-md-6">
                        {{ form_row(form.type) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.objet) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.nom) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.prenom) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.image) }}
                    </div>
                    <div class="col-md-12  ">
                        {{ form_row(form.description) }}
                    </div>
                </div>
            </div>

        {{ form_widget(form) }}
        <a href="{{ path('app_reclamationfront_new') }}"> <button type="submit" class="button border">Ajouter</button></a>
        <a class=" button border"href="{{ path('MesReclamations') }}" >Annuler</a>
        {{ form_end(form) }}
        </div>


    </div>

{% endblock %}