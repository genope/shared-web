{% extends 'base-front.html.twig' %}

{% block title %}Publication{% endblock %}

{% block body %}
    <div id="titlebar" class="gradient">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Les experiences partagées</h2>
                    <nav id="breadcrumbs">
                        <ul>

                            <li><a href="{{ path('app_front_publication') }}"> Retour</a></li>
                            <li>Détails expériences</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="blog-page">
            <div class="row">
                <div class="col-lg-8 col-md-8">
                    <div class="utf_blog_post utf_single_post">
                        <a  class="utf_post_img"> <img  src="{{  asset ("image/#{publication.image}") }}" alt=""> </a>
                        <div class="utf_post_content">
                            <h3>{{ publication.nom }}</h3>
                            <ul class="utf_post_text_meta">
                                <span class="date"><i class="fa fa-clock-o"></i> {{ publication.datecreation ? publication.datecreation|date('Y-m-d') : '' }}</span>
                                <li>Par <a href="#"></a> {{ publication.idGuest }}</li>
                                <li>À<a href="#"></a> {{ publication.region }}</li>
                                <li><a href="#">{{ number }} comments</a></li>
                            </ul>
                            <div class="utf_post_quote"> <span class="icon"></span>
                                <blockquote> {{ publication.adresse }}</blockquote>
                            </div>
                            <p>{{ publication.description }}</p>
                            <div class="social-contact">
                                <a href="#" class="facebook-link"><i class="fa fa-facebook"></i> Facebook</a>
                                <a href="#" class="twitter-link"><i class="fa fa-twitter"></i> Twitter</a>
                                <a href="#" class="instagram-link"><i class="fa fa-instagram"></i> Instagram</a>
                                <a href="#" class="linkedin-link"><i class="fa fa-linkedin"></i> Linkedin</a>
                                <a href="#" class="youtube-link"><i class="fa fa-youtube-play"></i> Youtube</a>
                            </div>
                        </div>
                    </div>
                    <a href="{{ path('app_publication_edit', {'id': publication.id}) }}" class="button border">Modifier</a>
                    <a href="{{ path('app_publication_front_delete', {'id': publication.id}) }}" onclick="return confirm('Are you sure you want to delete this item?');" class="button border">Supprimer</a>

                    <div class="clearfix"></div>
                    <h4 class="headline_part margin-top-20">Dans la même region</h4>
                    <div class="row">
                        <div class="col-md-6 col-sm-12"> <a href="#" class="blog_compact_part-container">
                                <div class="blog_compact_part"> <img src="images/blog-compact-post-01.jpg" alt="">
                                    <div class="blog_compact_part_content">
                                        <h3>The Most Popular New top Places Listing</h3>
                                        <ul class="blog_post_tag_part">
                                            <li>22 January 2021</li>
                                        </ul>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit</p>
                                    </div>
                                </div>
                            </a>
                        </div>

                        <div class="col-md-6 col-sm-12"> <a href="#" class="blog_compact_part-container">
                                <div class="blog_compact_part"> <img src="images/blog-compact-post-02.jpg" alt="">
                                    <div class="blog_compact_part_content">
                                        <h3>Greatest Event Places in Listing</h3>
                                        <ul class="blog_post_tag_part">
                                            <li>10 January 2021</li>
                                        </ul>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>

                    <section class="comments">
                        <h4 class="headline_part margin-top-20 margin-bottom-35"> <i class="fa fa-comments" ></i>Comments <span class="comments-amount">({{ number }})</span></h4>
                        <ul>
                            {% for c in commentaires %}
                                <li>
                                    <div class="avatar"><img src="{{ asset("Front-office/images/#{c.idGuest.imageProfile}") }}" alt=""></div>

                                    <div class="utf_comment_content">
                                        <div class="utf_arrow_comment"></div>
                                        {#    <div class="utf_star_rating_section" data-rating="4.5"><span class="star"></span><span class="star"></span><span class="star"></span><span class="star"></span><span class="star half"></span></div> #}
                                        {% if c.note==1  %}
                                            <i class ='fa fa-star text-warning'></i> <i class ='fa fa-star '  ></i><i class ='fa fa-star '  ></i><i class ='fa fa-star '  ></i><i class ='fa fa-star '  ></i>
                                        {% elseif c.note==2 %}
                                            <i class ='fa fa-star text-warning'  ></i> <i class ='fa fa-star text-warning'  ></i><i class ='fa fa-star '  ></i><i class ='fa fa-star '  ></i><i class ='fa fa-star '  ></i>
                                        {% elseif c.note==3 %}
                                            <i class ='fa fa-star text-warning'  ></i> <i class ='fa fa-star text-warning'  ></i><i class ='fa fa-star text-warning'  ></i><i class ='fa fa-star '  ></i><i class ='fa fa-star '  ></i>
                                        {% elseif c.note==4 %}
                                            <i class ='fa fa-star text-warning'  ></i> <i class ='fa fa-star text-warning'  ></i><i class ='fa fa-star text-warning'  ></i><i class ='fa fa-star text-warning'  ></i><i class ='fa fa-star '  ></i>
                                        {% else %}
                                            <i class ='fa fa-star text-warning'  ></i> <i class ='fa fa-star text-warning'  ></i><i class ='fa fa-star text-warning'  ></i><i class ='fa fa-star text-warning'  ></i><i class ='fa fa-star text-warning'  ></i>
                                        {% endif %}

                                        <div class="utf_by_comment">{{ c.nom }}<span class="date"><i class="fa fa-clock-o"></i> {{ publication.datecreation ? publication.datecreation|date('Y-m-d') : '' }}</span>  <a href="{{ path('app_commentaire_front_delete', {'id':c.id ,'idpub':idpub}) }}" onclick="return confirm('Are you sure you want to delete this item?');" class="reply">Supprimer <i class="fa fa-times"></i></a>   </div>
                                        <p>{{ c.comment }}</p>

                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    </section>
                    <div class="clearfix"></div>

                     <div id="utf_add_review" class="utf_add_review-box">

                        <h3 class="utf_listing_headline_part margin-bottom-35"   > <i class="fa fa-pencil-square-o"></i> Ajouter votre commentaire</h3>

                         {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                            <fieldset>
                                <div class="row">
                                    <div class="col-md-4">
                                        {{ form_row(form.nom) }}
                                    </div>
                                    <div class="col-md-4">
                                        {{ form_row(form.idGuest) }}
                                    </div>
                                    <div class="col-md-4">
                                        {{ form_row(form.note) }}
                                    </div>
                                </div>
                                <div>
                                    {{ form_row(form.comment) }}
                                </div>
                            </fieldset>
                            <button class="button">Poster</button>
                            <div class="clearfix"></div>
                            {{ form_end(form) }}
                    </div>
                </div>

                <div class="col-lg-4 col-md-4">
                    <div class="sidebar right">
                        <div class="utf_box_widget margin-top-35">
                            <h3><i class="sl sl-icon-book-open"></i> Ajoutés récemment</h3>
                            <ul class="utf_widget_tabs">
                                <li>
                                    <div class="utf_widget_content">
                                        <div class="utf_widget_thum"> <a href="blog_detail_right_sidebar.html"><img src="images/blog-widget-03.jpg" alt=""></a> </div>
                                        <div class="utf_widget_text">
                                            <h5><a href="blog_detail_right_sidebar.html">Lorem ipsum dolor sit amet consectetur...</a></h5>
                                            <span><i class="fa fa-clock-o"></i> Feb 02, 2021 at 12:52 pm</span>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </li>
                                <li>
                                    <div class="utf_widget_content">
                                        <div class="utf_widget_thum"> <a href="blog_detail_right_sidebar.html"><img src="images/blog-widget-02.jpg" alt=""></a> </div>
                                        <div class="utf_widget_text">
                                            <h5><a href="blog_detail_right_sidebar.html">Lorem ipsum dolor sit amet consectetur...</a></h5>
                                            <span><i class="fa fa-clock-o"></i> Feb 02, 2021 at 12:52 pm</span>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </li>
                                <li>
                                    <div class="utf_widget_content">
                                        <div class="utf_widget_thum"> <a href="blog_detail_right_sidebar.html"><img src="images/blog-widget-01.jpg" alt=""></a> </div>
                                        <div class="utf_widget_text">
                                            <h5><a href="blog_detail_right_sidebar.html">Lorem ipsum dolor sit amet consectetur...</a></h5>
                                            <span><i class="fa fa-clock-o"></i> Feb 02, 2021 at 12:52 pm</span>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </li>
                            </ul>
                        </div>

                        <div class="clearfix"></div>
                        <div class="utf_box_widget opening-hours review-avg-wrapper margin-top-35 margin-bottom-70">
                            <h3><i class="sl sl-icon-star"></i>  Rating Average</h3>
                            <div class="box-inner">
                                <div class="rating-avg-wrapper text-theme clearfix">
                                    <div class="rating-avg">4.8</div>
                                    <div class="rating-after">
                                        <div class="rating-mode">/5 Average</div>

                                    </div>
                                </div>
                                <div class="ratings-avg-wrapper">
                                    <div class="ratings-avg-item">
                                        <div class="rating-label">Quality</div>
                                        <div class="rating-value text-theme">5.0</div>
                                    </div>
                                    <div class="ratings-avg-item">
                                        <div class="rating-label">Location</div>
                                        <div class="rating-value text-theme">4.5</div>
                                    </div>
                                    <div class="ratings-avg-item">
                                        <div class="rating-label">Space</div>
                                        <div class="rating-value text-theme">3.5</div>
                                    </div>
                                    <div class="ratings-avg-item">
                                        <div class="rating-label">Service</div>
                                        <div class="rating-value text-theme">4.0</div>
                                    </div>
                                    <div class="ratings-avg-item">
                                        <div class="rating-label">Price</div>
                                        <div class="rating-value text-theme">5.0</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}
