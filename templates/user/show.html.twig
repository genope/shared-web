{% extends 'base-back.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Cin</th>
                <td>{{ user.cin }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Datedenaissance</th>
                <td>{{ user.datedenaissance ? user.datedenaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.telephone }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ user.etat }}</td>
            </tr>
            <tr>
                <th>AdressHost</th>
                <td>{{ user.adressHost }}</td>
            </tr>
            <tr>
                <th>ImageCin</th>
                <td>{{ user.imageCin }}</td>
            </tr>
            <tr>
                <th>ImageProfile</th>
                <td>{{ user.imageProfile }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'cin': user.cin}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
