{{ form_start(form) }}
     {% if form_errors(form.message) > 0 %}

         {{ form_widget(form.message, {'attr': {'style': ' border-bottom-color: red'}}) }}
         <div style="font-size: 12px; font-family: Arial; color: red;margin-top: -5px;padding-bottom: 10px;margin-left: 10px">{{ form_errors(form.message) }}</div>

     {% else %}
         {{ form_widget(form.message,{'attr':{'oninput':'myFunction()'}}) }}
     {% endif %}
    <button class="btn send-btn btn-lg"  style="margin-left: 15px;margin-top: -18px">  <i class="fab fa-telegram-plane"></i></button>
{{ form_end(form) }}

<script>


    function myFunction() {
        const b=document.getElementById("chat_message");
      const a=document.getElementById("chat_message").value;
      if(a==" ")
      {
          b.style.borderBottomColor="red";
      }
      else{
          b.style.borderBottomColor="green";
      }

    }

</script>
