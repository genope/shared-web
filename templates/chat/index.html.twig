{% extends 'base.html.twig' %}

{% block title %}Chat index{% endblock %}

{% block body %}
    <h1>Chat index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdChat</th>
                <th>Message</th>
                <th>Envoyeat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chat in chats %}
            <tr>
                <td>{{ chat.idChat }}</td>
                <td>{{ chat.message }}</td>
                <td>{{ chat.envoyeat ? chat.envoyeat|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_chat_show', {'idChat': chat.idChat}) }}">show</a>
                    <a href="{{ path('app_chat_edit', {'idChat': chat.idChat}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chat_new') }}">Create new</a>


{% endblock %}
