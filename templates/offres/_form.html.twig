{% extends 'base-back.html.twig' %}

{% block content %}



    <div id="titlebar" class="dashboard_gradient">
        <div class="row">
            <div class="col-md-12">
                <h2>Add Offre</h2>
                <nav id="breadcrumbs">
                    <ul>
                        <li><a href="index_1.html">Dashbord</a></li>
                        <li><a href="dashboard.html">Add Offres</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>




    <div class="add_utf_listing_section margin-top-45">
        <div class="utf_add_listing_part_headline_part">
            <h3><i class="sl sl-icon-tag"></i> Ajouter Offre</h3>
        </div>
        {{ form_start(form) }}
        <div class="row with-forms">
            <div class="col-md-6">
                <h5>{{ form_label(form.nom,"Nom du l'offre") }}</h5>
                {{ form_widget(form.nom) }}
            </div>
            <div class="col-md-6">
                <h5>{{ form_label(form.categ,"categ du l'offre") }}</h5>
                {{ form_widget(form.categ) }}
            </div>
        </div>
        <div class="row with-forms">
            <div class="col-md-6">
                <h5>
                    {{ form_label(form.datedebut,"datedebut du l'offre") }}</h5>

                {{ form_widget(form.datedebut , {'attr': {'type': 'date'}})}}

            </div>
            <div class="col-md-6">
                <h5>{{ form_label(form.datefin,"datefin du l'offre") }}</h5>


                {{ form_widget(form.datefin) }}


            </div>
        </div>
        <div class="row with-forms">
            <div class="col-md-6">
                <h5> {{ form_label(form.ville,"ville du l'offre") }}</h5>


                {{ form_widget(form.ville) }}


            </div>
            <div class="col-md-6">
                <h5> {{ form_label(form.prix,"prix du l'offre") }}</h5>


                {{ form_widget(form.prix) }}


            </div>
        </div>
        <div class="row with-forms">
            <div class="col-md-12">
                <h5> {{ form_label(form.description,"description du l'offre") }}</h5>
                {{ form_widget(form.description , {'attr': {'placeholder': 'Add your decription here...'}}) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}




















{% endblock %}
