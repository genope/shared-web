{% extends 'base-back.html.twig' %}

{% block content %}

	<div id="titlebar" class="dashboard_gradient">
		<div class="row">
			<div class="col-md-12">
				<h2>Reviews</h2>
				<nav id="breadcrumbs">
					<ul>
						<li>
							<a href="index_1.html">Home</a>
						</li>
						<li>
							<a href="dashboard.html">Dashboard</a>
						</li>
						<li>Reviews</li>
					</ul>
				</nav>
			</div>
		</div>
	</div>


	<div class="row">
		<div class="col-lg-12 col-md-12">
			<div class="utf_dashboard_list_box margin-top-0">
				<h4>
					<i class="sl sl-icon-star"></i>
					Approuver Offres</h4>
				<ul>
					{% for offre in offres %}
						<li>
							<div class="comments utf_listing_reviews">
								<ul>
									<li>
										<div class="avatar"><img src="{{ asset('Front-office/forum/img/avatar-2.jpg') }}" alt="">
										</div>
										<div class="utf_comment_content">
											<div class="utf_arrow_comment"></div>
											<div class="utf_by_comment">{{ offre.nom }}
												<div class="utf_by_comment-listing own-comment">
													Prix :
													<a href="#">{{ offre.prix}}</a>
													Dt</div>
												<span class="date">
													<i class="fa fa-clock-o"></i>
													Début :
													{{ offre.datedebut | date("F,d,Y")}}</span>
												<span class="date">
													<i class="fa fa-clock-o"></i>
													Fin :
													{{ offre.datefin | date("F,d,Y")}}</span>
												<span class="date">
													<i class="fa fa-map-marker"></i>
													{{ offre.ville}}</span>
												<div class="utf_star_rating_section" data-rating="5"></div>
												<div class="buttons-to-right" style="width: 250px">

													<a href="" class="button gray " style="width: 126px;color: green">
														<i class="fa fa-check "></i>
														Approuver</a>

													<a href="" class="button gray " style="width: 126px;color: #ffbd3f;margin-top:20px">
														<i class="fa fa-trash "></i>
														Delete</a>

												</div>
											</div>
                                            
											<p>
												{{ offre.description}}</p>
										</li>
									</li>
								</ul>
							</div>
						</li>

					{% endfor %}

				</ul>
			</div>
		</div>


		<div class="col-md-12">
			<div class="footer_copyright_part">Copyright © 2021 All Rights Reserved.</div>
		</div>
	</div>


{% endblock %}
